{
    "displayName": "maven-pom-sorter",
    "publisher": "zodac",
    "name": "maven-pom-sorter",
    "version": "0.0.1",
    "description": "Sort pom.xml elements according to the recommended Apache Maven order",
    "icon": "images/logo.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/zodac/maven-pom-sorter"
    },
    "engines": {
        "vscode": "^1.106.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onWillSaveTextDocument"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "maven-pom-sorter.sortPom",
                "title": "maven-pom-sorter: Sort pom.xml"
            }
        ],
        "languages": [
            {
                "id": "xml",
                "aliases": [
                    "XML"
                ],
                "extensions": [
                    ".xml"
                ]
            }
        ]
    },
    "scripts": {
        "check-types": "tsc --noEmit",
        "compile": "npm run check-types && npm run lint && tsx src/esbuild.ts",
        "compile-tests": "tsc -p . --outDir out",
        "lint": "eslint src",
        "package": "npm run check-types && npm run lint && tsx src/esbuild.ts --production",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "test": "npm run pretest && npm run test:unit && npm run test:integration",
        "test:unit": "tsx node_modules/.bin/mocha 'src/**/*.spec.ts'",
        "test:integration": "npm run test:integration:debug | grep -E 'Test Suite|✔|✖|passing|fail|Error'",
        "test:integration:debug": "npm run pretest && xvfb-run -a vscode-test 2>&1",
        "vscode:prepublish": "npm run package",
        "watch": "npm run watch:esbuild && npm run watch:tsc*",
        "watch:esbuild": "tsx src/esbuild.ts --watch",
        "watch:tsc": "tsc --noEmit --watch -p .",
        "watch-tests": "tsc -p . -w --outDir out"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "^24.10.1",
        "@vscode/test-cli": "^0.0.12",
        "@vscode/test-electron": "^2.5.2",
        "@types/vscode": "^1.106.0",
        "@vscode/vsce": "^3.7.0",
        "esbuild": "^0.27.0",
        "esbuild-plugin-tsc": "^0.4.0",
        "eslint": "^9.39.1",
        "tsx": "^4.20.6",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.46.3"
    },
    "dependencies": {
        "tslib": "^2.5.2"
    }
}
